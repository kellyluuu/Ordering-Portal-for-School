<%- include("partials/head.ejs") %>


<body class="m-5">
  <div class="m-5">
    <%- include("partials/header.ejs") %>

    <h1>Edit Product</h1>
    <h3><span style="float: right"><a href="/store"> Back to all Products</a></span></h3>
    <form action="/store/<%=editProduct._id%>?_method=PUT" method="POST">
    <div class="form-group">
        <label class="col-form-label col-form-label-lg mt-4" for="inputLarge">Product Name:</label>
        <input class="form-control form-control-lg" type="text" name="name" value="<%= editProduct.name %>"  required>
      </div>
      <div class="form-group">
        <label class="col-form-label col-form-label-lg mt-4" for="inputLarge">Image URL:</label>
        <input class="form-control form-control-lg" type="url" name="img" value="<%= editProduct.img %> " >
      </div>
      <br>
      <div class="form-floating">
        <textarea class="form-control" placeholder="Description" name="description" id="floatingTextarea"><%= editProduct.description %> </textarea>
        <label for="floatingTextarea">Description</label>
      </div>
      <div class="form-group">
        <label class="col-form-label col-form-label-lg mt-4" for="inputLarge">Price:</label>
        <input class="form-control form-control-lg" type="number" min=0 step=0.01 name="price" value="<%=editProduct.price.toFixed(2)%>" required>
      </div>
      <div class="form-group">
        <label class="col-form-label col-form-label-lg mt-4" for="access">Access:</label>
        <select name="access">
          <option value="public">Public</option>
          <option value="admin">Admin Access Only</option>
        </select>
      </div>
      <input type="submit" class="btn btn-primary m-3" value="UPDATE">
</form>
</div>
    
</body>
</html>