<%- include("partials/head.ejs") %>
<script defer src="static/app.js"></script>

  <body>
    <div class="m-5">
      <%- include("partials/header.ejs") %>
        <%- include("partials/nav.ejs") %>

          <div class="card mb-3">
            <h1 class="card-header">
              <%= product.name %>
                <h1>

                  <div class="card-body">

                      <form action="/store/<%=product._id%>/edit">
                       <button class="btn btn-outline-primary" type="submit">EDIT</button>
                      </form>
                  </div>
         
                  <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="50%" height="50%"
                    aria-label="Placeholder: Image cap" focusable="false" role="img"
                    preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180"
                    style="font-size:1.125rem;text-anchor:middle">
                    <rect width="50%" height="50%" fill="#FFFFFF"></rect>
                  
                    <image href="<%= product.img %> " width="100%" height="100%" />
                  </svg>


                  <form action="/store/<%=product._id%>?_method=DELETE" method="POST">
                    <span style="float: right"> <button class="btn btn-outline-danger" type="submit">Delete</button>	
                      &nbsp;</span>
                  </form>
                  <h5 class="card-title">&nbsp;&nbsp;Product Detail</h5>
  
                  &nbsp;&nbsp;<%= product.description %>
                  <div class="card-footer text-muted"><b>
                      COST = $<%= product.price.toFixed(2) %> </b>
                  </div>
          </div>
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Buy Now</h4>
              <form id="buyamtid" action="/store/<%=product._id%>/1?_method=PUT" method="POST">
                <label for="customRange3" class="form-label">Purchased Qty</label>
                <input id="bQty" type="number" value="1" name="bQty">
                <input id="buy-button" class="btn btn-primary" type="submit" value="BUY">
              </form>
            </div>
          </div>
    </div>
  </body>
  <script>
  let bQty = document.getElementById("bQty");
  let buyamtid = document.getElementById("buyamtid");
  bQty.oninput = function() {
    buyamtid.setAttribute('action',`/store/<%=product._id%>/${bQty.value}?_method=PUT`) 
  }
</script>
  </html>